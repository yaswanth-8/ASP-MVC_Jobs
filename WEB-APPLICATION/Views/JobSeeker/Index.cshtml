
@{
    ViewData["Title"] = "Index";
}


<h1>In Job Seeker Panel</h1>
@using (Html.BeginForm("Index", "JobSeeker", FormMethod.Post))
{
    <div class="row mb-2">
        <label class="col-sm-8 col-form-label" for="name"><b>Search</b></label>
        <div class="col-sm-5">
            <input type="text" class="form-control" name="name" id="name" required />
        </div>
        <div class="col-sm-4">
            <button class="btn btn-success" type="submit">

                Search

            </button>
        </div>
    </div>
    
}
<table class="table">
    <thead>
        <tr>
            <th>Job Id</th>
            <th>Job Name</th>
            <th>Category</th>
            <th>Sub Category</th>
            <th>Vacancy</th>
            <th>Salary</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (JobModel job in ViewBag.JobList)
            {
                <tr>
                    <td>@job.JobId</td>
                    <td>@job.JobName</td>
                    <td>@job.Category</td>
                    <td>@job.SubCategory</td>
                    <td>@job.VacancyCount</td>
                    <td>@job.Salary</td>
                </tr>
            }
        }
    </tbody>

</table>

